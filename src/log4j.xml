<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{dd MMM yyyy HH:mm:ss,SSS} %-5p: %c - %m%n" />
		</layout>
	</appender>
	
  <appender name="util" class="org.apache.log4j.FileAppender">
        <param name="File" value="/tmp/siga.log" />
        <param name="Append" value="true" />
        <layout class="org.apache.log4j.PatternLayout">
          <param name="ConversionPattern" value="%d{yyyy MM dd HH:mm:ss} %-5p %c{2} - %m%n"/>
        </layout>           
     </appender>
   <appender name="dailyFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
      <param name="file" value="/tmp/siga-dia"/>
    <param name="MaxBackupIndex" value="5" />
    <param name="MaxFileSize" value="10MB" />
     <param name="DatePattern" value="'.'yyyy-MM-dd'.log'" />
    <layout class="org.apache.log4j.PatternLayout">       
        <param name="ConversionPattern" value="%d{yyyy MM dd HH:mm:ss} %-5p %c{2} - %m%n"/>
    </layout>
    
  </appender> 

	
	<!-- Application Loggers -->
	<logger name="br.gov.mps">
		<level value="debug" />
		<appender-ref ref="console" />
	</logger>
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
		<level value="error" />
	</logger>
	<logger name="net.sf.ehcache">
		<level value="error" />
	</logger>
	<logger name="org.hibernate.cache">
		<level value="error" />
	</logger>
	<logger name="org.hibernate">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.type">
		<level value="warn" />
	</logger>
	<logger name="org.hibernate.type.descriptor.sql.BasicBinder">
		<level value="trace" />
	</logger>
	
	<logger name="org.springframework.beans">
		<level value="error" />
	</logger>
	
	<logger name="org.springframework.context">
		<level value="error" />
	</logger>

	<logger name="org.springframework.web">
		<level value="error" />
	</logger>
	
    <logger name="org.springframework.security">
        <level value="error" />
    </logger>

	<!-- Root Logger -->
	<root>
		<priority value="error" />
		<appender-ref ref="util" />
	</root>
	
</log4j:configuration>
