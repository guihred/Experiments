<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.text.*?>
<?import javafx.event.*?>
<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<HBox xmlns:fx="http://javafx.com/fxml">
	<padding>
		<Insets topRightBottomLeft="10" />
	</padding>
	<children>
		<VBox spacing="10">
			<children>
				<Text text="Filter Results" />
				<TextField fx:id="resultsFilter" />
				<Text text="IPs" />
				<TextField fx:id="ipsQuery" disable="true" />
				<Text text="Consultas" />
				<TextField fx:id="consultasQuery" disable="true" />
				<Button onAction="#onActionKibanaScan" text="Kibana Scan" />
				<Button onAction="#onActionClear" text="Clear" />
				<Button onAction="#onExportExcel" text="Export Excel" />
				<ProgressIndicator fx:id="progressIndicator" 
					VBox.vgrow="ALWAYS" minHeight="40.0" minWidth="40.0" progress="0.0" />
			</children>
		</VBox>
		<SplitPane HBox.hgrow="ALWAYS">
			<items>
				<VBox>
					<Text text="Quantidade de Ips" textAlignment="CENTER" />
					<TableView fx:id="ipsTable" onKeyReleased="#copyContent"
						VBox.vgrow="ALWAYS" />
				</VBox>
				<VBox>
					<Text text="NÃºmero de Consultas" />
					<TableView fx:id="consultasTable" onKeyReleased="#copyContent"
						VBox.vgrow="ALWAYS" />
				</VBox>
			</items>
		</SplitPane>
	</children>
</HBox>
