<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?import javafx.scene.layout.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.text.*?>
<?import javafx.event.*?>
<?import javafx.collections.*?>
<?import javafx.scene.input.*?>
<?import javafx.geometry.*?>
<HBox xmlns:fx="http://javafx.com/fxml">
	<padding>
		<Insets topRightBottomLeft="10" />
	</padding>
	<children>
		<VBox spacing="10">
			<children>
				<Text text="Filter Results" />
				<TextField fx:id="resultsFilter" />
				<ComboBox fx:id="fields" value="">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<String fx:value="" />
						</FXCollections>
					</items>
				</ComboBox>

				<Button onAction="#onActionKibanaScan" text="Kibana Scan" />
				<Button onAction="#onActionClear" text="Clear" />
				<Button onAction="#onExportExcel" text="Export Excel" />
				<ProgressIndicator fx:id="progressIndicator"
					VBox.vgrow="ALWAYS" minHeight="40.0" minWidth="40.0" progress="0.0" />
			</children>
		</VBox>
		<SplitPane HBox.hgrow="ALWAYS" orientation="VERTICAL">
			<items>
				<SplitPane HBox.hgrow="ALWAYS">
					<items>
						<VBox>
							<Text text="Gerid INSS - Usuário x Qtde IPs de Origem"
								textAlignment="CENTER" />
							<Text fx:id="ipsQuery" />
							<TableView fx:id="ipsTable" onKeyReleased="#copyContent"
								VBox.vgrow="ALWAYS" />
						</VBox>
						<VBox>
							<Text text="Usuários x Número consultas" />

							<Text fx:id="consultasQuery" />
							<TableView fx:id="consultasTable" onKeyReleased="#copyContent"
								VBox.vgrow="ALWAYS" />
						</VBox>
					</items>
				</SplitPane>
				<SplitPane HBox.hgrow="ALWAYS">
					<items>
						<VBox>
							<Text text="Acessos por Sistema" textAlignment="CENTER" />

							<Text fx:id="acessosSistemaQuery" />
							<TableView fx:id="acessosSistemaTable" onKeyReleased="#copyContent"
								VBox.vgrow="ALWAYS" />
						</VBox>
						<VBox>
							<Text text="Requisições por Sistema" />
							<Text fx:id="pathsQuery" />
							<TableView fx:id="pathsTable" onKeyReleased="#copyContent"
								VBox.vgrow="ALWAYS" />
						</VBox>
					</items>
				</SplitPane>
			</items>
		</SplitPane>
	</children>
</HBox>
